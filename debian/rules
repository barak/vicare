#!/usr/bin/make -f

dh_targets=binary binary-arch binary-indep build build-arch build-indep clean install

$(dh_targets) %:
	dh $@ --with autoreconf --parallel

.PHONY: $(dh_targets)

override_dh_autoreconf:
	mkdir -p m4
	dh_autoreconf

override_dh_auto_build:
	egrep -q '^flags[[:space:]]*:.*\bsse2\b' /proc/cpuinfo \
	 || (echo "error: CPU instruction set extension sse2 not found."; \
	     echo "   aborting build process"; \
	     exit 1)
	dh_auto_build

override_dh_auto_test:
	@echo testing disabled

override_dh_auto_install:
	dh_auto_install
	rm debian/vicare/usr/share/doc/vicare/COPYING
	rm debian/vicare/usr/share/doc/vicare/GPL-3
	rm debian/vicare/usr/share/info/dir
