#!/usr/bin/make -f

build clean binary-indep binary-arch binary install:
	dh $@ --with autotools_dev --parallel

.PHONY: build clean binary-indep binary-arch binary install

override_dh_auto_configure:
	automake --add-missing
	autoconf
	dh_auto_configure

override_dh_auto_build:
	egrep -q '^flags[[:space:]]*:.*\bsse2\b' /proc/cpuinfo \
	 || (echo "error: CPU instruction set extension sse2 not found."; \
	     echo "   aborting build process"; \
	     exit 1)
	dh_auto_build

override_dh_auto_test:
	@echo testing disabled

override_dh_auto_install:
	dh_auto_install
	rm debian/vicare/usr/share/doc/vicare/COPYING
	rm debian/vicare/usr/share/doc/vicare/GPL-3
	rm debian/vicare/usr/share/info/dir
